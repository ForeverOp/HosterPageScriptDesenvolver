<!DOCTYPE html>
<html lang="pt-br">
<head>
<meta charset="UTF-8">
<title>Lua RAW Uploader</title>

<style>
body{
  background:#000;
  color:#0f0;
  font-family:monospace;
  padding:15px;
}
textarea{
  width:100%;
  height:300px;
  background:#000;
  color:#0f0;
  border:2px solid #0f0;
  padding:10px;
}
button{
  width:100%;
  padding:14px;
  margin-top:10px;
  background:#0f0;
  color:#000;
  font-weight:bold;
  cursor:pointer;
}
pre{
  margin-top:15px;
  padding:10px;
  border:2px solid #0f0;
  cursor:pointer;
  word-break:break-all;
}
small{opacity:.6}
</style>
</head>

<body>

<h2>Lua RAW Uploader</h2>
<small>Cole seu script Lua abaixo</small>

<textarea id="code" placeholder="print('FUNCIONA NO LOADSTRING')"></textarea>

<button onclick="enviar()">CRIAR RAW</button>

<pre id="out">// link RAW aparecerá aqui</pre>

<script>
const WORKER_UPLOAD = "https://ForeverOp.workers.dev/upload";

async function enviar(){
  const code = document.getElementById("code").value;
  if(!code.trim()){
    alert("Lua vazio");
    return;
  }

  const res = await fetch(WORKER_UPLOAD, {
    method: "POST",
    body: code
  });

  const link = await res.text();

  const out = document.getElementById("out");
  out.textContent = link;

  // copia automático
  navigator.clipboard.writeText(link);
}

// clicar no link abre
const out = document.getElementById("out");
out.onclick = () => {
  if(out.textContent.startsWith("http")){
    window.open(out.textContent);
  }
};
</script>

</body>
</html>
